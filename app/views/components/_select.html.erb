<% data_action ||= nil %>
<div class="mdc-select mdc-select--outlined input"
     data-target="<%= data_target %>"
     data-mdc-auto-init="MDCSelect">
  <%= select_tag name, option_tags, {
      include_blank: true,
      class: "mdc-select__native-control mdc-theme--on-primary",
      "data-action": (data_action if data_action)
  } %>
  <div class="mdc-notched-outline">
    <div class="mdc-notched-outline__leading"></div>
    <div class="mdc-notched-outline__notch">
      <label class="mdc-floating-label"><%= text %></label>
    </div>
    <div class="mdc-notched-outline__trailing"></div>
  </div>
</div>