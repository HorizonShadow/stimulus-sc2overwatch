<div class="mdc-text-field mdc-text-field--textarea mdc-text-field--fullwidth mdc-text-field--outlined input" data-target="<%= data_target %>">
  <span class="mdc-text-field__resizer">
    <%= text_area_tag(name, nil, { "data-action": data_action, class: "mdc-text-field__input" }) %>
  </span>
  <div class="mdc-notched-outline">
    <div class="mdc-notched-outline__leading"></div>
    <div class="mdc-notched-outline__notch">
      <label class="mdc-floating-label"><%= text %></label>
    </div>
    <div class="mdc-notched-outline__trailing"></div>
  </div>
</div>
