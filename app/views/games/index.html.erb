<p id="notice"><%= notice %></p>

<div class="mdc-layout-grid__inner">
  <% @games.map do |g| %>
    <%= render 'components/card/card' do %>
      <%= render 'components/card/primary_action', link: nil do %>
      <% end %>
    <% end %>
  <% end %>
</div>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Map</th>
      <th>Date</th>
      <th>Url</th>
      <th>Format</th>
      <th>Game type</th>
      <th>Season</th>
      <th>Replay version</th>
      <th>Map image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.map %></td>
        <td><%= game.date %></td>
        <td><%= game.url %></td>
        <td><%= game.format %></td>
        <td><%= game.game_type %></td>
        <td><%= game.season_id %></td>
        <td><%= game.replay_version %></td>
        <td><%= game.map_image %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

