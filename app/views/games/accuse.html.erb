<div data-controller="accusation">
  <%= form_tag({}, remote: true, "data-target": "accusation.form") do %>
    <div class="mdc-layout-grid">
      <div class="mdc-layout-grid__inner">
        <div class="mdc-layout-grid__cell">
          <h1 class="mdc-typography--headline5 mdc-theme--on-surface">Accuse a player</h1>
          <%= render 'components/select',
              name: "player",
              option_tags: options_from_collection_for_select(@game.players, "id", "name"),
              text: "Pick a player",
              data_target: "accusation.playerSelect"
          %>
          <%= render 'components/text_area', {
              name: "evidence",
              text: "Evidence",
              options: {
                  class: "mdc-text-field__input",
                  "data-target": "upload-steps.evidence",
                  "data-action": "input->upload-steps#evidenceChanged"
              }
          }
          %>
          <%= render 'components/button',
              text: "Submit"
          %>
        </div>
      </div>
    </div>
  <% end %>
</div>