<%
  [
    { text: "Recently Reported", link: game_players_path },
    { text: "All Reported Players", link: players_path },
  ].map do |i| %>
  <a class="mdc-list-item <%= 'mdc-list-item--activated' if request.path.start_with?(i[:link]) %>"
     href="<%= i[:link] %>"
     data-action="click->nav#itemClicked"
  >
    <span class="mdc-list-item__text"><%= i[:text] %></span>
  </a>
<% end %>
