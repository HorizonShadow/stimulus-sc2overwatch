<h1 class="mdc-typography--headline6 mdc-theme--on-surface">Vote</h1>
<div class="mdc-layout-grid__inner">
  <div class="mdc-layout-grid__cell">
    <%= render @game_player %>
  </div>
  <div class="mdc-layout-grid__cell">
    <div data-controller="vote" data-vote-form-valid="false" class="mdc-theme--on-surface">
      <%= form_tag(update_game_player_path @game_player) do%>
        <h2 class="mdc-typography--headline5">Choose your verdict</h2>
        <a href="<%= @game_player.game.url %>" target="_blank" class="mdc-button" data-mdc-auto-init="MDCRipple">
          <span class="mdc-button__label">Download the replay</span>
        </a>
        <h1 class="mdc-typography--headline6">Evidence</h1>
        <pre class="mdc-typography--body2 mdc-theme--background"><%= @game_player.evidence %></pre>
        <h1 class="mdc-typography--headline6">Verify the winner</h1>
        <div class="mdc-select mdc-select--outlined input"
             data-target="vote.player"
             data-mdc-auto-init="MDCSelect">
          <%= select_tag :player, options_from_collection_for_select(@game_player.game.players, :id, :name), {
              include_blank: true,
              class: "mdc-select__native-control mdc-theme--on-primary",
              "data-action": "change->vote#playerChanged"
          } %>
          <div class="mdc-notched-outline">
            <div class="mdc-notched-outline__leading"></div>
            <div class="mdc-notched-outline__notch">
              <label class="mdc-floating-label">Pick a player</label>
            </div>
            <div class="mdc-notched-outline__trailing"></div>
          </div>
        </div>
        <%= render 'components/select', {
            name: :verdict,
            option_tags: options_for_select([
                %w(Guilty guilty),
                %w(Innocent innocent)
            ]),
            text: "Verdict",
            data_target: "vote.verdict",
            data_action: "change->vote#verdictChanged"
        } %>
        <button class="mdc-button" type="submit" data-target="vote.submit" data-mdc-auto-init="MDCRipple">
          <span class="mdc-button__label">Submit</span>
        </button>
      <% end %>
    </div>
  </div>
</div>


